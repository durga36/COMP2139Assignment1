@model IEnumerable<Product>
@{
    ViewBag.Title = "Add Product";
}

// nav bar
<div>
    <h1 class="display-4">SportsPro Technical Support</h1>
    <p>Sports management software for the sports enthusiast</p>
    <div>
        <h2>Admin</h2>
        <button style="padding:15px; width:50%; text-align:left;">Manage Products</button><br />
        <button style="padding:15px; width:50%; text-align:left;">Manage Technicians</button><br />
        <button style="padding:15px; width:50%; text-align:left;">Manage Customers</button><br />
        <button style="padding:15px; width:50%; text-align:left;">Manage Incidents</button><br />
        <button style="padding:15px; width:50%; text-align:left;">Manage Registrations</button>
    </div>
    <div>
        <h2>Technicians</h2>
        <button style="padding:15px; width:50%; text-align:left;">Update Incident</button>
    </div>
</div>

<body>
    <h1>Add Product</h1>
    <form>
        <label for="code">Code</label><br />
        <input type="text" id="code" name="code" value="code" /><br />

        <label for="productName">Name</label><br />
        <input type="text" id="productName" name="productName" value="productName" /><br />

        <label for="price">Yearly Price</label><br />
        <input type="text" id="price" name="price" value="price" /><br />

        <label for="releaseDate">Release Date</label><br />
        <input type="date" id="releaseDate" name="releaseDate" value="releaseDate" /><br />

        <input type="submit" value="Save" />
        <input type="submit" value="Cancel" />
    </form>
</body>
